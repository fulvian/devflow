## Sanitized production template. Define secrets via environment, not in repo.
NODE_ENV=production
LOG_LEVEL=info
SERVICE_NAME=devflow-phase1

# Orchestrator
ORCHESTRATOR_PORT=3005
DEVFLOW_API_SECRET=devflow-orchestrator-token

# Synthetic/OpenRouter (keys provided by env)
SYNTHETIC_API_KEY=
SYNTHETIC_BASE_URL=https://api.synthetic.new/v1
SYNTHETIC_TIMEOUT_MS=30000
SYNTHETIC_MAX_RETRIES=3
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT_MS=60000

# Budget
COST_TRACKING_ENABLED=true
BUDGET_DAILY_USD=2.00
BUDGET_WEEKLY_USD=10.00
BUDGET_MONTHLY_USD=20.00
BUDGET_ALERT_THRESHOLDS=0.5,0.8,0.9,1.0

# Database
DEVFLOW_DB_PATH=./data/devflow.sqlite
DATABASE_WAL_MODE=true
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=1

# Batching
DEVFLOW_SYNTHETIC_BATCH=1
DEVFLOW_SYNTHETIC_BATCH_WINDOW_MS=120
DEVFLOW_SYNTHETIC_MAX_BATCH_SIZE=8
