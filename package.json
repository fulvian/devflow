{
  "name": "devflow-cognitive-test-suite",
  "version": "1.0.0",
  "description": "Test suite for DevFlow Cognitive Task+Memory System Phase 1",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest src/test/integration",
    "test:scenarios": "jest src/test/scenarios",
    "setup:test-env": "ts-node src/test/setup/test-environment.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "smoke:test": "node scripts/smoke-runner.js",
    "ccr:start": "dotenv -f ./.env -- ccr start",
    "ccr:status": "ccr status",
    "ccr:stop": "ccr stop",
    "ccr:restart": "dotenv -f ./.env -- ccr restart",
    "ccr:code": "ANTHROPIC_BASE_URL='' dotenv -f ./.env -- npx @musistudio/claude-code-router code --settings ./ccr.config.json",
    "ccr:manual": "ANTHROPIC_BASE_URL='' dotenv -f ./.env -- npx @musistudio/claude-code-router code --settings ./ccr.config.json",
    "debug:env": "dotenv -f ./.env -- node -e \"console.log('API Key VISTA DAL PROCESSO:', process.env.SYNTHETIC_API_KEY)\"",
    "cctools:list": "bash scripts/cc-tools-cli.sh list --auto-start",
    "cctools:metadata": "bash scripts/cc-tools-cli.sh metadata --project-root /Users/fulvioventura/devflow --auto-start",
    "cctools:validate": "bash scripts/cc-tools-cli.sh validate --project-root /Users/fulvioventura/devflow --timeout-ms 15000 --auto-start",
    "cctools:health": "bash scripts/cc-tools-health.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@musistudio/claude-code-router": "^1.0.0",
    "@types/winston": "^2.4.4",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.2.0",
    "ccusage": "^16.2.5",
    "gray-matter": "^4.0.3",
    "sqlite": "^5.1.1",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.19.14",
    "@types/sqlite3": "^3.1.8",
    "@types/uuid": "^9.0.2",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/core/**/*.ts",
      "src/config/**/*.ts",
      "!src/core/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  }
}
