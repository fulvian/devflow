{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@devflow/core": ["../core/src/index.ts"],
      "@devflow/core/*": ["../core/src/*"],
      "@devflow/shared": ["../shared/src/index.ts"],
      "@devflow/shared/*": ["../shared/src/*"],
      "@devflow/claude-adapter": ["./src/index.ts"],
      "@devflow/claude-adapter/*": ["./src/*"],
      "@devflow/openrouter": ["../adapters/openrouter/src/index.ts"],
      "@devflow/openrouter/*": ["../adapters/openrouter/src/*"],
      "@devflow/synthetic": ["../adapters/synthetic/src/index.ts"],
      "@devflow/synthetic/*": ["../adapters/synthetic/src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.js"],
  "references": [
    { "path": "../shared" },
    { "path": "../core" },
    { "path": "../adapters/synthetic" }
  ]
}