{
  "name": "devflow-real-world-test",
  "version": "1.0.0",
  "description": "Real-world test suite for DevFlow Cognitive Task+Memory System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest src/test/integration",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "init-db": "ts-node src/scripts/init-database.ts",
    "test-db": "ts-node src/scripts/test-database.ts"
  },
  "keywords": [
    "devflow",
    "cognitive",
    "task-memory",
    "ai",
    "testing"
  ],
  "author": "DevFlow Team",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "zod": "^3.22.4",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/sqlite3": "^3.1.8",
    "@types/uuid": "^9.0.2",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/core/**/*.ts",
      "src/config/**/*.ts",
      "!src/core/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  }
}